<h1>
    Add Posts
</h1>
<br>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div><br>
    {{/each}}

{{/if}}
{{#if noerror}}
    <div class="alert alert-danger">{{noerror}}</div>
{{/if}}
<form method="post" action="/posts/add">
   <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" placeholder="Project title" name="title">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" class="form-control" placeholder="Category" name="category">
  </div>
   <div class="form-group">
    
    <input type="hidden" class="form-control" placeholder="Author" name="author" value="{{author}}">
  </div>
  <div class="form-group">
    <label>Problem</label>
    <input type="text" class="form-control" placeholder="problem of project" name="problem">
  </div>
  
  <div class="form-group">
    <label>Body</label>
    <textarea placeholder="body of project" name="text" id="text"></textarea>
  </div>
  <button type="submit" class="btn btn-default">save</button>
</form>
<script src="/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
     CKEDITOR.replace('text');
     
</script>